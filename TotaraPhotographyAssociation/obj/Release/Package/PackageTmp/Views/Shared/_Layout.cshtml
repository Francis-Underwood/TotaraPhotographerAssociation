@{
    // Vincent: grab current controller/action name
    var ctrllerName = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    var actName = ViewContext.RouteData.Values["action"].ToString().ToLower();
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="robots" content="all,follow">
    <meta name="googlebot" content="index,follow,snippet,archive">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Otara Photography Association">
    <meta name="author" content="Vincent Zhang">
    <meta name="keywords" content="">

    <title>
        Otara Photography Association
    </title>

    <meta name="keywords" content="photography">

    <link href='http://fonts.googleapis.com/css?family=Roboto:400,500,700,300,100' rel='stylesheet' type='text/css'>

    <!-- styles -->
    <link href="~/Content/font-awesome.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/animate.min.css" rel="stylesheet">
    <link href="~/Content/owl.carousel.css" rel="stylesheet">
    <link href="~/Content/owl.theme.css" rel="stylesheet">

    <!-- theme stylesheet -->
    <link href="~/Content/style.aquamarineturquoise.css" rel="stylesheet">

    <!-- your stylesheet with modifications -->
    <link href="~/Content/custom.css" rel="stylesheet">

    <script src="~/Scripts/respond.min.js"></script>

    @*
        Vince: for some specific pages, special Js libs are required.
    *@

    @RenderSection("prerequisite", required: false)

    <link rel="shortcut icon" href="favicon.png">

</head>

<body>
    <!-- *** TOPBAR ***
    _________________________________________________________ -->
    <div id="top">
        <div class="container">

            <div class="col-md-6 offer">
                Totara Photographer Association of New Zealand
            </div>

            @*
                Vince: render the login buttons at top right corner
            *@
            @Html.Partial("_LoginPartial")

        </div>

    </div>

    <!-- *** TOP BAR END *** -->
    <!-- *** NAVBAR ***
    _________________________________________________________ -->

    <div class="navbar navbar-default yamm" role="navigation" id="navbar">
        <div class="container">
            <div class="navbar-header">

                <a class="navbar-brand home tpanz-logo" href="@Url.Action("Index", "Home", null, null)" data-animate-hover="bounce">
                    <img src="~/Images/TPANZ-logo_s.png" alt="TPANZ logo" class="hidden-xs">
                </a>
                <div class="navbar-buttons">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="fa fa-align-justify"></i>
                    </button>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#search">
                        <span class="sr-only">Toggle search</span>
                        <i class="fa fa-search"></i>
                    </button>
                    <a class="btn btn-default navbar-toggle" href="basket.html">
                        <i class="fa fa-shopping-cart"></i>  <span class="hidden-xs">3 items in cart</span>
                    </a>
                </div>
            </div>
            <!--/.navbar-header -->

            <div class="navbar-collapse collapse" id="navigation">

                <ul class="nav navbar-nav navbar-left">
                    @*
                        Vincent: if it is the current route, highlight it
                    *@
                    <li class="@((ctrllerName == "home" && actName == "index") ? "active" : "dropdown")">

                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "dropdown-toggle", data_hover = "dropdown", data_delay = "200" })
                    </li>
                    <li class="@((ctrllerName == "home" && actName == "about") ? "active" : "dropdown")">
                        @Html.ActionLink("About", "About", "Home", null, new { @class = "dropdown-toggle", data_hover = "dropdown", data_delay = "200" })
                    </li>
                    @if (@User.Identity.IsAdminOrFull())
                    {
                        <li class="@((ctrllerName == "home" && actName == "editabout") ? "active" : "dropdown")">
                            @Html.ActionLink("Edit About", "EditAbout", "Home", null, new { @class = "dropdown-toggle", data_hover = "dropdown", data_delay = "200" })
                        </li>
                    }
                    @if (@User.Identity.IsFrontEndUser())
                    {
                        <li class="@((ctrllerName == "newproduct" && actName == "index") ? "active" : "dropdown")">
                            @Html.ActionLink("New Product", "Index", "NewProduct", null, new { @class = "dropdown-toggle", data_hover = "dropdown", data_delay = "200" })
                        </li>
                    }
                    @if (@User.Identity.IsUserInFullOrAssociate())
                    {
                        <li class="@((ctrllerName == "resource" && actName == "index") ? "active" : "dropdown")">
                            @Html.ActionLink("Resource", "Index", "Resource", null, new { @class = "dropdown-toggle", data_hover = "dropdown", data_delay = "200" })
                        </li>
                        <li class="@((ctrllerName == "cart" && actName == "index") ? "active" : "dropdown")">
                            @Html.ActionLink("Cart", "Index", "Cart", null, new { @class = "dropdown-toggle", data_hover = "dropdown", data_delay = "200" })
                        </li>
                    }
                    @if (@User.Identity.IsFrontEndUser())
                    {
                        <li class="@((ctrllerName == "Membership" && actName == "index") ? "active" : "dropdown")">
                            @Html.ActionLink("Membership", "Index", "Membership", null, new { @class = "dropdown-toggle", data_hover = "dropdown", data_delay = "200" })
                        </li>
                    }
                </ul>

            </div>
            <!--/.nav-collapse -->

            <div class="navbar-buttons">

                @Html.Action("Summary", "Cart")
                <!--/.nav-collapse -->

            </div>

            <!--/.nav-collapse -->

        </div>
        <!-- /.container -->
    </div>
    <!-- /#navbar -->
    <!-- *** NAVBAR END *** -->

    <div id="all">

        <div id="content">
            <div class="container">

                @RenderBody()

            </div>
            <!-- /.container -->
        </div>
        <!-- /#content -->
        <!-- *** FOOTER ***
        _________________________________________________________ -->
        <!-- /#footer -->
        <!-- *** FOOTER END *** -->
        <!-- *** COPYRIGHT ***
        _________________________________________________________ -->
        <div id="copyright">
            <div class="container">
                <div class="col-md-6">
                    <p class="pull-left">© 2016 Totara Photographer Association of New Zealand</p>
                </div>
                <div class="col-md-6">
                    <p class="pull-right">
                        Template by <a href="http://bootstrapious.com/e-commerce-templates">Bootstrapious</a> with support from <a href="https://kakusei.cz">Kakusei</a>
                        <!-- Not removing these links is part of the licence conditions of the template. Thanks for understanding :) -->
                    </p>
                </div>
            </div>
        </div>
        <!-- *** COPYRIGHT END *** -->

    </div>
    <!-- /#all -->
    <!-- *** SCRIPTS TO INCLUDE ***
    _________________________________________________________ -->
    <script src="~/Scripts/jquery-1.11.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/waypoints.min.js"></script>
    <script src="~/Scripts/modernizr.js"></script>
    <script src="~/Scripts/bootstrap-hover-dropdown.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/front.js"></script>

</body>

</html>
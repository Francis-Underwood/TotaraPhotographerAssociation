@using TotaraPhotographyAssociation.Models
@model List<Resource>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12" style="min-height: 448px;">

    <div class="box" id="text-page">

        <h1>White Papers & Guidelines</h1>

        @if (Model != null && Model.Count() != 0)
        {
            foreach (var r in Model)
            {
                @*
                    Vince: generate download link
                *@
                <p>
                    @Html.ActionLink(@r.Title, "DisplayPDF", new { id = @r.Id })
                    <br />
                    Adobe Acrobat PDF
                </p>
            }
        }

    </div>

</div>
<!-- /.col-md-12 -->
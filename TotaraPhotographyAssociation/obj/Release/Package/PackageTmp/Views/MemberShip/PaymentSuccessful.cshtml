
@{
    ViewBag.Title = "Payment Successful";
    var role = ViewBag.UpdateRole;
    var membershipPlan = ViewBag.MembershipPlan;
}

<div class="col-md-6 col-sm-offset-3">
    <div class="box" style="min-height: 448px">
        <h1>@ViewBag.Title</h1>

        <section>
            <hr />

            @if (role == "yes")
            {
                <p>
                    You have successfully subscribed @membershipPlan membership plan. Please refresh your browser to view more areas.
                </p>
            }
            else
            {
                <p>
                    Your subscribtion to @membershipPlan membership plan has failed for some reason.
                </p>
            }
        </section>

    </div>
</div>

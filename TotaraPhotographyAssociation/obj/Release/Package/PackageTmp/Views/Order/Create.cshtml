@model TotaraPhotographyAssociation.Models.CreateOrderViewModel

@{
    ViewBag.Title = "Create";
}

<div class="col-md-12" id="checkout">

    <div class="box">
        
@using (Html.BeginForm("Create", "Order", FormMethod.Post))
{
    @Html.AntiForgeryToken()
            <h1>Checkout</h1>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="content">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.RecepientFirstName)
                            @Html.TextBoxFor(m => m.RecepientFirstName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.RecepientLastName)
                            @Html.TextBoxFor(m => m.RecepientLastName, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.DeliveryAddressLine_1)
                            @Html.TextBoxFor(m => m.DeliveryAddressLine_1, new { @class = "form-control" })
                        </div>
                    </div>
                    
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.DeliveryAddressLine_2)
                            @Html.TextBoxFor(m => m.DeliveryAddressLine_2, new { @class = "form-control" })
                        </div>
                    </div>

                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.PostalCode)
                            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.RecepientPhone)
                            @Html.TextBoxFor(m => m.RecepientPhone, new { @class = "form-control" })
                        </div>
                    </div>
                    
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.RecepientEmail)
                            @Html.TextBoxFor(m => m.RecepientEmail, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <!-- /.row -->

            </div>

            <div class="box-footer">
                <div class="pull-left">
                    <a href="@Url.Action("Index", "NewProduct", null, null)" class="btn btn-default"><i class="fa fa-chevron-left"></i>Back to basket</a>
                </div>
                <div class="pull-right">
                    <button type="submit" class="btn btn-primary">
                        Go to Paypal to finish the process<i class="fa fa-chevron-right"></i>
                    </button>
                </div>
            </div>
}
    </div>
    <!-- /.box -->


</div>